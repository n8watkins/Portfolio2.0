# Copy this file to .env.local and fill in your values
# See README.md for where to get each API key

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME=Your Portfolio Name
NEXT_PUBLIC_VERSION=2.0

# Google Analytics
# Get from: https://analytics.google.com (Create a GA4 property)
NEXT_PUBLIC_GA_ID=

# Google reCAPTCHA v3
# Get from: https://www.google.com/recaptcha/admin (Select "reCAPTCHA v3")
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=

# Resend Email Service
# Get from: https://resend.com/api-keys (Free: 100 emails/day)
RESEND_API_KEY=
CONTACT_EMAIL_TO=your@email.com
CONTACT_EMAIL_FROM=contact@yourdomain.com

# Sentry (Optional - Error Tracking)
# Get from: https://sentry.io (Free: 5,000 errors/month)
SENTRY_AUTH_TOKEN=
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_ORG=
SENTRY_PROJECT=